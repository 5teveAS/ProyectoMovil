<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="52dp">

        <FrameLayout
            android:layout_width="416dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="331dp"
                android:layout_height="69dp"
                android:text="Parking SJO"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="48sp"
                android:textStyle="bold" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#302E2E"
            android:text="Iniciar Sesión"
            app:icon="@drawable/ic_login" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#302E2E"
            android:text="Registrarse"
            app:icon="@drawable/ic_register" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="215dp"
                app:srcCompat="@drawable/parqueos_scaled" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="331dp"
            android:layout_height="69dp"
            android:text="Parking SJO"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#03A9F4"
            android:text="Parqueo central de San José, Reserva tu espacio ahora!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#03A9F4"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>