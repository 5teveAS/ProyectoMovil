<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="src_over">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="52dp">

        <FrameLayout
            android:layout_width="416dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:text="Parking SJO"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="48sp"
                android:textStyle="bold" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#302E2E"
            android:text="Iniciar Sesión"
            app:icon="@drawable/ic_login" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#302E2E"
            android:text="Registrarse"
            app:icon="@drawable/ic_register" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="215dp"
                app:srcCompat="@drawable/parqueos_scaled" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="50px"
            android:background="#03A9F4"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="50px"
            android:background="#03A9F4"
            android:text="Parqueo central de San José, Reserva tu espacio ahora!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight='10px'
                android:backgroundTint="#302E2E"
                android:text="Mas información"
                app:icon="@drawable/ic_info" />

            <Button
                android:id="@+id/btn_contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#302E2E"
                android:text="Contacto"
                app:icon="@drawable/ic_phone" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_contactoasdf"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="TextView" />

    </LinearLayout>

</ScrollView>






