<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="src_over"
    android:textAlignment="center">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="52dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Parking SJO"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="48sp"
            android:textStyle="bold" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="238dp"
                app:srcCompat="@drawable/parqueos_scaled" />

        </FrameLayout>

        <TextView
            android:id="@+id/textfasdfcasdf"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="50px"
            android:text="Fundado por Jose Alberto Porras. El parking SJO cuenta con un total de 350 espacios donde elegir para que estacione su vehiculo, donde eliges tu hora de entrada y se cobra al cliente dependiendo la cantidad de tiempo que se estacione el vehiculo. Nuestras tarifas empiezan desde $10 la hora."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textfadasdasdf"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="50px"
            android:text="Estamos para Servirle!"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_volverInformacion"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250px"
            android:backgroundTint="#302E2E"
            android:text="Volver"
            android:textAlignment="center"
            app:icon="@drawable/ic_baseline_arrow_back_24" />


    </LinearLayout>

</ScrollView>

